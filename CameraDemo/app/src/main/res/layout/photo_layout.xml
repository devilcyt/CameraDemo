<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- this is top menu area -->
    <FrameLayout
        android:id="@+id/menu_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:id="@+id/prop_rectify"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:textSize="15sp" />
    </FrameLayout>

    <!-- this is surfaceview -->
    <com.example.camerademo.AutoFitTextureView
        android:id="@+id/surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/menu_top"
        />

    <!-- this is bottom menu area -->
    <FrameLayout
        android:id="@+id/menu_bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        >

        <ImageButton
            android:id="@+id/photo_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="photo"
            android:background="@drawable/circle_photo"
            android:src="@drawable/ic_camera_black_48dp"
            />
        <ImageButton
            android:id="@+id/switch_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:contentDescription="video"
            android:layout_marginStart="40dp"
            android:background="@color/control_background"
            android:src="@drawable/ic_switch_video_white_36dp"
            />
    </FrameLayout>

</RelativeLayout>
